<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888">

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="STANDARD AIR DENSITY" />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="VTHCharlie"
                android:textColor="@color/abc_search_url_text_selected"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txt_first"
                android:layout_alignStart="@+id/txt_first"
                android:layout_below="@+id/txt_first"
                android:text="ABC12345678" />

            <ImageView
                android:id="@+id/img_option"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/txt_first"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/options_icon" />

            <ImageView
                android:id="@+id/img_baterry"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_above="@+id/textView3"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_option"
                android:layout_toStartOf="@+id/img_option"
                android:src="@drawable/baterry" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/img_baterry"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_baterry"
                android:layout_toStartOf="@+id/img_baterry"
                android:src="@drawable/micro_sd_back_by_tash78" />

            <TextView
                android:id="@+id/txt_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="cfm"
                android:textColor="@color/abc_search_url_text_selected"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txt_center"
                android:layout_alignLeft="@+id/txt_center"
                android:layout_alignStart="@+id/txt_center"
                android:text="1234"
                android:textColor="@color/abc_search_url_text_selected"
                android:textSize="50sp" />

            <ImageView
                android:id="@+id/img_farr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/txt_center"
                android:layout_toEndOf="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:src="@drawable/fahren" />

            <ImageView
                android:id="@+id/img_aim"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/txt_center"
                android:layout_marginTop="24dp"
                android:src="@drawable/focus" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_aim"
                android:layout_toEndOf="@+id/img_baterry"
                android:layout_toRightOf="@+id/img_baterry"
                android:text="36 in"
                android:textColor="@color/abc_search_url_text_selected"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toEndOf="@+id/txt_numbers"
                android:layout_toRightOf="@+id/txt_numbers"
                android:src="@drawable/Enneagram_circle" />

            <TextView
                android:id="@+id/space_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_aim"
                android:text="_____________________________________________________" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/space_line">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/space_line">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/temperature"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/imageView2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85"
                        android:textSize="30sp"
                        android:layout_toRightOf="@+id/imageView2"
                        android:layout_toEndOf="@+id/imageView2"
                        android:id="@+id/textView5" />
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ft/min"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_alignStart="@+id/textView5"
                        android:id="@+id/textView6" />
                    <TextView
                        android:id="@+id/first_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="
                        |
                        |
                        |
                        |
                        |
                        "
                        android:layout_alignStart="@id/imageView2"
                        android:layout_alignLeft="@id/imageView2"

                        android:layout_marginBottom="15dp"
                        />

                    <ImageView
                        android:id="@+id/img_flame"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/fire"
                        android:layout_alignStart="@id/textView5"
                        android:layout_alignLeft="@id/textView5"
                        android:layout_marginStart="80dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/txt_flame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="36"
                        android:layout_toRightOf="@id/img_flame"
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%rh"
                        android:layout_alignTop="@+id/textView6"
                        android:layout_alignLeft="@+id/txt_flame"
                        android:layout_alignStart="@+id/txt_flame" />

                    <TextView
                        android:id="@+id/second_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="
                        |
                        |
                        |
                        |
                        |
                        "
                        android:layout_alignStart="@id/img_flame"
                        android:layout_alignLeft="@id/img_flame"

                        android:layout_marginBottom="15dp"
                        />

                    <ImageView
                        android:id="@+id/img_eprovedka"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/gradus"
                        android:layout_toRightOf="@+id/second_space"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_eprovedka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="76.8"
                        android:textSize="30sp"
                        android:layout_toRightOf="@id/img_eprovedka"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*F"
                        android:layout_alignStart="@id/txt_eprovedka"
                        android:layout_alignLeft="@id/txt_eprovedka"
                        android:layout_below="@id/txt_eprovedka"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:id="@+id/third_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="
                        |
                        |
                        |
                        |
                        |
                        "
                        android:layout_alignStart="@id/img_eprovedka"
                        android:layout_alignLeft="@id/img_eprovedka"

                        android:layout_marginBottom="15dp"
                        />

                    <ImageView
                        android:id="@+id/img_km"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/km"
                        android:layout_toRightOf="@+id/third_space"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:id="@+id/txt_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="92.3"
                        android:textSize="30sp"
                        android:layout_toRightOf="@id/img_km"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:layout_alignStart="@id/txt_km"
                        android:layout_alignLeft="@id/txt_km"
                        android:layout_below="@id/txt_km"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"/>




                </RelativeLayout>
            </HorizontalScrollView>




        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>